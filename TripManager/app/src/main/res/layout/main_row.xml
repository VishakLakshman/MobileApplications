<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_mainrow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_mainrow_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_mainrow_name"
        android:layout_below="@+id/textView_mainrow_name"
        android:layout_marginTop="25dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView_mainrow_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mainrow_name"
        android:layout_marginStart="127dp"
        android:layout_toEndOf="@+id/textView_mainrow_cost"
        app:srcCompat="@drawable/viewmap" />

    <ImageView
        android:id="@+id/imageView_mainrow_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_mainrow_view"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imageView_mainrow_view"
        app:srcCompat="@drawable/edittrip" />

    <ImageView
        android:id="@+id/imageView_mainrow_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_mainrow_edit"
        android:layout_toEndOf="@+id/imageView_mainrow_edit"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/delete" />
</RelativeLayout>