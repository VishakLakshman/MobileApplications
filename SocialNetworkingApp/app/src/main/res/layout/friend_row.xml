<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView_friend_accept"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/textView_friend_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        app:srcCompat="@drawable/accept" />

    <ImageView
        android:id="@+id/imageView_friend_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/textView_friend_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/add_new_friend" />

    <ImageView
        android:id="@+id/imageView_friend_unfriend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/textView_friend_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/remove_friend" />

    <ImageView
        android:id="@+id/imageView_friend_decline"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/textView_friend_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/decline" />

</RelativeLayout>
