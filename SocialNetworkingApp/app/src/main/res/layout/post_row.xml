<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_row_postby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_row_posttxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView_row_postby"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_row_postime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_row_postby"
        android:layout_marginLeft="250dp"
        android:text="10 minutes ago" />

    <ImageView
        android:id="@+id/imageView_row_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="330dp"
        android:layout_below="@+id/textView_row_postime"
        app:srcCompat="@drawable/delete" />

</RelativeLayout>
