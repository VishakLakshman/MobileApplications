<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mypc.musicsearchapp.TrackDetails">

    <ImageView
        android:id="@+id/imageViewDetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDetail"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="44dp"
        android:layout_toStartOf="@+id/imageViewDetail"
        android:text="Name:" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="31dp"
        android:text="Artist:" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:text="URL:"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textViewNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewArtistDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewNameDetail"
        android:layout_below="@+id/textViewNameDetail"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignTop="@+id/textView4"
        android:text="TextView"
         />

    <TextView
        android:id="@+id/textViewUrlDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewNameDetail"
        android:layout_below="@+id/textViewArtistDetail"
        android:layout_toEndOf="@+id/textView6"
        android:autoLink="web"
        android:layout_alignTop="@+id/textView6"
        android:text="TextView" />


    <ListView
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView10"
        android:id="@+id/listViewSimilar"></ListView>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Similar Tracks"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="20dp"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

</android.widget.RelativeLayout>
