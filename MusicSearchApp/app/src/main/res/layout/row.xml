<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageViewAlbumArt"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/favSongNameTextView"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewAlbumArt"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp" />
    <TextView
        android:id="@+id/favSongArtistTextView"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_below="@+id/favSongNameTextView"
        android:layout_alignStart="@+id/favSongNameTextView" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/starStyle"
        android:theme="@style/yourStyle"
        android:checked="false"
        android:layout_toEndOf="@+id/favSongNameTextView"
        android:layout_marginStart="28dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/favSongNameTextView"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/favSongNameTextView" />

</RelativeLayout>
